<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/pinkish" />
            <stroke android:width="@dimen/small_margin"
                android:color="@color/purple_700"
                android:dashWidth="@dimen/very_small_size"
                android:dashGap="@dimen/very_small_size" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/reddish" />
            <stroke android:width="@dimen/very_small_size"
                android:color="@color/black"
                android:dashWidth="@dimen/small_margin"
                android:dashGap="@dimen/very_small_size" />
        </shape>
    </item>
</selector>